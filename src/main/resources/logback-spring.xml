<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<springProperty scope="context" name="logFilePath" source="logging.path"/>

	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<Target>System.out</Target>
		<encoder>
			<Pattern>.%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg %n
			</Pattern>
		</encoder>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>ALL</level>
		</filter>
	</appender>

	<appender name="RFA"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${logFilePath}/logs/winwin-application.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<FileNamePattern>${logFilePath}/logs/winwin-application.%d{yyyy-MM-dd}.gz
			</FileNamePattern>
			<maxHistory>30</maxHistory>
		</rollingPolicy>

		<encoder>
			<Pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{35} - %msg %n
			</Pattern>
		</encoder>
	</appender>

	<logger name="com.winwin.winwin" additivity="false">
		<level value="DEBUG" />
	    <level value="INFO" />
	    <level value="WARN" />
	    <level value="ERROR" />
		<appender-ref ref="RFA"/>
		<appender-ref ref="console" /> 
	</logger>

	<root>
		<level value="INFO" />
		<appender-ref ref="RFA"/>
		<appender-ref ref="console" />
	</root>

</configuration>